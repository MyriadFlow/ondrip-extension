{
    "manifest_version": 2,
    "name": "OnDrip | MyriadFlow",
    "version": "0.2",
    "short_name": "OnDrip | MyriadFlow Browser Extension",
    "description": "OnDrip | MyriadFlow Extension for Accessing NFT Subscriptions.",
    "browser_action": {
        "default_icon": "assets/images/icon.png",
        "default_popup": "html/popup.html",
        "default_title": "Browser Extension for MyriadFlow"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+O",
                "mac": "MacCtrl+Shift+O"
            },
            "description": "Open OnDrip Extension"
        }
    },
    "icons": {
        "16": "assets/images/icon16.png",
        "48": "assets/images/icon48.png",
        "128": "assets/images/icon128.png"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "vendors/jquery-3.5.1/jquery-3.5.1.js",
            "vendors/popperjs-2.5.4/popper.min.js",
            "vendors/bootstrap-4.3.1/js/bootstrap.min.js",
            "vendors/ethers-5.0/ethers-5.0.umd.min.js",
            "scripts/content_scripts.js"
        ],
		"run_at": "document_end"
    }],
    "permissions": [
        "tabs",
		"<all_urls>",
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "vendors/jquery-3.5.1/jquery-3.5.1.js",
            "vendors/popperjs-2.5.4/popper.min.js",
            "vendors/bootstrap-4.3.1/js/bootstrap.min.js",
            "vendors/ethers-5.0/ethers-5.0.umd.min.js",
            "scripts/background.js"
        ],
        "persistent": false
    }
}